{
  "name": "gpt-voice",
  "displayName": "GPT Voice",
  "version": "0.0.1",
  "license": "MIT",
  "description": "GPT Voice is an extension that allows you to use Chat GPT through voice commands and listen to the AI's response.",
  "author": "samuelcupertino.dev@gmail.com",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build"
  },
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.4",
    "next": "13.4.4",
    "plasmo": "0.77.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-loader-spinner": "^5.3.4",
    "react-spinners": "^0.13.8"
  },
  "devDependencies": {
    "@babel/core": "^7.22.1",
    "@plasmohq/prettier-plugin-sort-imports": "workspace:*",
    "@plasmohq/rps": "workspace:*",
    "@plasmohq/storage": "^1.6.1",
    "@types/chrome": "0.0.237",
    "@types/node": "20.2.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "prettier": "2.8.8",
    "typescript": "5.1.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "your-id@example.com"
      }
    },
    "permissions": [
      "tabs",
      "storage"
    ]
  },
  "contributors": [
    "louisgv"
  ]
}
